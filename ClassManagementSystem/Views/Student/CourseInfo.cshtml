@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>学生课程信息</title>
    <link href="/css/Student/StudentChooseCoursePage.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="top">
        <div class="font">
            课堂管理系统
        </div>
        <div class="icon">
            <img src="/images/home.png">首页
            <img src="/images/help.png">帮助
            <img src="/images/exit.png">退出
        </div>
        <div class="clear"></div>
    </div>
    <div class="body">
        <div class="navigation">
            <div class="title">导航</div>
            <div class="line"></div>
            <div class="courseIntroduction">
                <a class="guidefont" href="#">基本信息</a>
                <a class="guidefont" href="#">课程信息</a>
                <a class="guidefont" href="#">选择课程</a>
            </div>
        </div>
        <div class="content">
            <div class="title">课程信息</div>
            <hr class="line" />
            <div class="blueBlock"></div>
        </div>
        <div class="clear"></div>
    </div>
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //<label style="margin-left:10%">班级 ： </label> <span class="info" id="class"></span>
            //    <label style="margin-left:10%">课程地点 ： </label> <span class="info" id="classSite"></span> <br />
            //    <label style="margin-left:10%">教师 ： </label> <span class="info" id="teacher"></span>
             $.ajax({
                 type: "GET",
                 url: "/class",
                 contentType: "application/json;charset=utf-8",
                 dataType: "json",
                 success: function (data, status)
                 {
                     for (var i = 0; i < data.length; i++)
                     {
                            
                             <div id="blueBlock"></div>
                         </div>
                             $("#blueBlock").append("<div class='main_box_right_content'><h3 class='classtitle'>'+data[i].name+'<button>退选课程</button> </h3><hr/>");
                         $("#blueBlock").append("<div class='classinfo'>");
                         $("#blueBlock").append("<label style='margin- left:10 % '>班级 ： '+data[i].name+'</label>");
                         $("#blueBlock").append("<label style='margin- left:20 % '>课程地点 ： '+data[i].site+'</label><br />");
                         $("#blueBlock").append("<label style='margin- left:10 % '>教师 ： '+data[i].courseTeacher.name+'</label>");
                         $("#blueBlock").append("</div>");
                     }
                 }
           });
       });
    </script>
</body>
</html>
